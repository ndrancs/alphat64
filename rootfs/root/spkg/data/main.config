spkgver="3.0.1"

mirror="http://sourceforge.net/projects/alphaos/files/packages"
maindir="/mnt/home/data/spkg"
archdir=$maindir/def-scripts-arch
compile_dir=$maindir/pkgbuild
srcdir=$maindir/sources
defdir=$maindir/def-scripts
pkgdir=$maindir/packages
editor="emendo"
browser="firefox"
user="ndrancs <ndrancs-at-gmail-dot-com>"
strip=yes

pakadir="/var/lib/paka"
arm_date="2014/04/10"
arm_mirror="http://seblu.net/a/arm/$arm_date"

CARCH="x86_64"
CHOST="x86_64-pc-linux-gnu"
CFLAGS="-march=x86-64 -O2 -pipe -fstack-protector --param=ssp-buffer-size=4"
CXXFLAGS="$CFLAGS"
LDFLAGS="-Wl,-O1,--sort-common,--as-needed,-z,relro"

#CARCH="i686"
#CHOST="i686-pc-linux-gnu"
#CFLAGS="-march=i686 -Os -pipe -fomit-frame-pointer"
#CXXFLAGS="$CFLAGS"
#LDFLAGS="-Wl,--as-needed"